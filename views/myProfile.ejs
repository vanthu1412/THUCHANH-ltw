<%- include('header') %>

<div class="container mt-5">
    <div class="row">
        <!-- Profile Sidebar (left) -->
        <div class="col-md-4">
            <div class="card text-center shadow-lg">
                <div class="card-body">
                    <!-- Profile Picture -->
                    <img src="https://via.placeholder.com/150" class="rounded-circle mb-3" alt="User Profile Picture" width="150" height="150">
                    <h3 class="card-title"><%= users.username %></h3>
                    <p class="text-muted"><%= users.fullname %></p>
                    <a href="/edit-profile" class="btn btn-primary mt-3">Chỉnh sửa hồ sơ</a>
                </div>
            </div>
        </div>

        <!-- Profile Information (right) -->
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h5>Thông tin cá nhân</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Họ và tên:</strong></div>
                        <div class="col-sm-8"><%= users.fullname %></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Email:</strong></div>
                        <div class="col-sm-8"><%= users.email %></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Giới tính:</strong></div>
                        <div class="col-sm-8"><%= users.sex %></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4"><strong>Địa chỉ:</strong></div>
                        <div class="col-sm-8"><%= users.address %></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>
