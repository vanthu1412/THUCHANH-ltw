<%- include('header') %>

<div class="container my-5">
    <!-- Split Layout for Contact Page -->
    <div class="row g-0 shadow-lg rounded-3 overflow-hidden">
        <!-- Contact Information Section -->
        <div class="col-md-6 d-flex flex-column justify-content-center align-items-center bg-primary text-white p-5">
            <h1 class="display-5 fw-bold mb-4">Liên Hệ</h1>
            <p class="lead text-center">Hãy liên hệ với chúng tôi qua biểu mẫu hoặc thông qua các thông tin liên hệ.</p>
            <p><strong>Email:</strong> contact@university.edu</p>
            <p><strong>Điện thoại:</strong> (012) 345-6789</p>
            <p><strong>Địa chỉ:</strong> 123 Đường ABC, Thành phố XYZ</p>
        </div>

        <!-- Contact Form Section -->
        <div class="col-md-6 bg-light p-5">
            <form action="/contact" method="POST" class="p-3">
                <div class="mb-4">
                    <label for="fullname" class="form-label">Họ và tên</label>
                    <input type="text" class="form-control rounded-pill" id="fullname" name="fullname" placeholder="Nhập họ và tên của bạn" required>
                </div>

                <div class="mb-4">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control rounded-pill" id="email" name="email" placeholder="Nhập email của bạn" required>
                </div>

                <div class="mb-4">
                    <label for="subject" class="form-label">Chủ đề</label>
                    <input type="text" class="form-control rounded-pill" id="subject" name="subject" placeholder="Chủ đề liên hệ" required>
                </div>

                <div class="mb-4">
                    <label for="message" class="form-label">Nội dung</label>
                    <textarea class="form-control rounded-3" id="message" name="message" rows="4" placeholder="Nhập nội dung tin nhắn của bạn" required></textarea>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill">Gửi liên hệ</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('footer') %>
