<%- include('header') %>
<!-- Include Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="container mt-5">
    <h1>Danh sách người dùng</h1>
    <a href="/usersadd" class="btn btn-primary">
        <i class="fas fa-user-plus"></i> Thêm người dùng mới
    </a>
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên đăng nhập</th>
                <th>Họ tên</th>
                <th>Giới tính</th>
                <th>Địa chỉ</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.username %></td>
                    <td><%= user.fullname %></td>
                    <td><%= user.sex %></td>
                    <td><%= user.address %></td> 
                    <td>
                        <a href="/users/<%= user.id %>" class="btn btn-info">
                            <i class="fas fa-eye"></i> Xem
                        </a>
                        <a href="/usersedit/<%= user.id %>" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a href="/users/delete/<%= user.id %>" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Xóa
                        </a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<%- include('footer') %>
